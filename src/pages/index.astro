---
import BaseLayout from '../layouts/BaseLayout.astro';

const services = [
	{
		title: 'IT Konzultace',
		description: 'Architektura systémů, výběr technologií, optimalizace procesů.',
		icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z'
	},
	{
		title: 'Vývoj Software',
		description: 'Webové aplikace, API, backendové systémy.',
		icon: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4'
	},
	{
		title: 'IoT Řešení',
		description: 'Senzory, automatizace, propojení fyzického a digitálního světa.',
		icon: 'M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z'
	}
];

const skills = [
	'Java', 'Node.js', 'Go', 'Python',
	'SQL', 'NoSQL', 'MQTT', 'Kafka',
	'Linux'
];
---

<BaseLayout title="Viktor Zavadil">
    <!-- Hero Section -->
    <section class="min-h-[70vh] flex items-center justify-center px-4 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-secondary/10"></div>
        <div class="text-center max-w-3xl relative z-10">
            <div class="mb-6">
                <div class="w-24 h-24 mx-auto rounded-full bg-gradient-to-br from-primary to-secondary p-1">
                    <img
                            src="/avatar.png"
                            alt="Viktor Zavadil"
                            class="w-full h-full rounded-full object-cover"
                    />
                </div>
            </div>
            <h1 class="text-4xl md:text-6xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                Viktor Zavadil
            </h1>
            <p class="text-xl md:text-2xl text-base-content/70 mb-8">
                IT konzultant & Software Developer
            </p>
            <div class="flex justify-center gap-3 flex-wrap">
                <a href="https://github.com/viktorzavadil" target="_blank" rel="noopener"
                   class="btn btn-circle btn-outline btn-primary" aria-label="GitHub">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24"
                         fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                </a>
                <a href="https://www.linkedin.com/in/viktorzavadil/" target="_blank" rel="noopener"
                   class="btn btn-circle btn-outline btn-primary" aria-label="LinkedIn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24"
                         fill="currentColor">
                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                </a>
                <a href="mailto:zavadil.viktor@seznam.cz" class="btn btn-circle btn-outline btn-primary"
                   aria-label="Email">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 px-4">
        <div class="container mx-auto max-w-6xl">
            <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">Čemu se věnuji</h2>
            <p class="text-base-content/60 text-center mb-12 max-w-2xl mx-auto">
                IT řešení od návrhu po realizaci
            </p>
            <div class="grid md:grid-cols-3 gap-6">
				{services.map((service) => (
                        <div class="card bg-base-100 border border-base-content/10 hover:border-primary/50 transition-all duration-300 hover:-translate-y-1">
                            <div class="card-body">
                                <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d={service.icon}/>
                                    </svg>
                                </div>
                                <h3 class="card-title text-xl">{service.title}</h3>
                                <p class="text-base-content/60">{service.description}</p>
                            </div>
                        </div>
				))}
            </div>
        </div>
    </section>

    <!-- Skills Section -->
    <section class="py-20 px-4 bg-base-100">
        <div class="container mx-auto max-w-4xl text-center">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">Technologie</h2>
            <p class="text-base-content/60 mb-10">
                Nástroje a jazyky, se kterými pracuji
            </p>
            <div class="flex flex-wrap justify-center gap-3">
				{skills.map((skill) => (
                        <span class="badge badge-lg badge-outline border-base-content/20 hover:border-primary hover:text-primary transition-colors cursor-default py-4 px-5">
            {skill}
          </span>
				))}
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 px-4">
        <div class="container mx-auto max-w-4xl">
            <div class="card bg-gradient-to-r from-primary/20 to-secondary/20 border border-primary/20">
                <div class="card-body text-center py-12">
                    <h2 class="text-2xl md:text-3xl font-bold mb-4">Pojďme si promluvit</h2>
                    <p class="text-base-content/70 mb-6 max-w-xl mx-auto">
                        Rád s vámi prodiskutuji vaše nápady a možnosti řešení.
                    </p>
                    <div class="flex justify-center gap-4 flex-wrap">
                        <a href="mailto:zavadil.viktor@seznam.cz" class="btn btn-primary">
                            Napište mi
                        </a>
                        <a href="/blog" class="btn btn-outline">
                            Číst blog
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>