---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date: Date): string {
  return date.toLocaleDateString('cs-CZ', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
}
---

<BaseLayout title="Blog" description="Články o technologiích, vývoji a IT">
  <section class="py-20 px-4">
    <div class="container mx-auto max-w-6xl">
      <div class="mb-16 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent leading-normal">
          Blog
        </h1>
        <p class="text-xl text-base-content/60 max-w-2xl mx-auto">
          Myšlenky, návody a postřehy
        </p>
      </div>

      {posts.length === 0 ? (
        <div class="text-center py-16">
          <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-base-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <p class="text-base-content/50 text-lg">Zatím žádné články.</p>
          <p class="text-base-content/40 mt-2">Brzy přibydou!</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map((post, index) => (
            <article
              class:list={[
                "card bg-base-100 border border-base-content/5 hover:border-primary/30 transition-all duration-300 hover:-translate-y-1 group",
                index === 0 && posts.length > 2 && "md:col-span-2 lg:col-span-2"
              ]}
            >
              <a href={`/blog/${post.id}`} class="card-body">
                <div class="flex flex-wrap gap-2 mb-3">
                  {post.data.tags.slice(0, 3).map((tag) => (
                    <span class="badge badge-sm bg-primary/10 text-primary border-0">{tag}</span>
                  ))}
                </div>
                <h2 class:list={[
                  "card-title group-hover:text-primary transition-colors",
                  index === 0 && posts.length > 2 ? "text-2xl" : "text-lg"
                ]}>
                  {post.data.title}
                </h2>
                <p class="text-base-content/60 line-clamp-2 mt-2">{post.data.description}</p>
                <div class="flex items-center justify-between mt-4 pt-4 border-t border-base-content/5">
                  <time class="text-sm text-base-content/40">
                    {formatDate(post.data.pubDate)}
                  </time>
                  <span class="text-primary text-sm font-medium group-hover:translate-x-1 transition-transform inline-flex items-center gap-1">
                    Číst
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </span>
                </div>
              </a>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>